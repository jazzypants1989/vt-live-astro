---
import PlayerControls from "./PlayerControls.astro"

export interface Props {
  title: string
  media: {
    type: string
    url: string
  }
}

const { title, media } = Astro.props
---

<div class="playlist-media">
  {
    media.type === "image" ? (
      <img src={media.url} alt={title} class="playlist-image" />
    ) : (
      <div>
        <video
          id="videoId"
          loop
          muted
          autoplay
          class="playlist-image"
          transition:persist="video"
        >
          <source src={media.url} type="video/mp4" />
        </video>
      </div>
    )
  }
  <PlayerControls showExtraButtons={true} />
  <!-- <div class="card-media-overlay playlist-overlay"></div> -->
</div>

<style is:global>
  .playlist-media {
    position: relative;
    display: flex;
    justify-content: center;
    margin-top: 20px;
    width: 100%;
  }

  .playlist-media .card-media-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120px;
    background: linear-gradient(to top, var(--backgroundColor), transparent);
    border-radius: 2rem;
    z-index: 2;
  }

  .playlist-media img {
    display: block;
    max-height: 480px;
    z-index: 1;
  }
</style>
